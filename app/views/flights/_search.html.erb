<%= form_tag(search_path, method: :get) do %>
	<div class="row">
		<div class="col s3">
			<%= label :departure_airport, "Origin" %>
			<%= collection_select :flight, :departure_airport, @airport_options, :id, :name, {disabled: [0], selected: [0]}, class: "browser-default" %>
		</div>
		<div class="col s3">
			<%= label :arrival_airport, "Destination" %>
			<%= collection_select :flight, :arrival_airport, @airport_options, :id, :name, {disabled: [0], selected: [0]}, class: "browser-default" %>
		</div>
		<div class="col s4">
			<%= label :departure_date, "Date of Departure" %>
			<%= select :flight, :departure_date, @date_options, {}, class: "browser-default" %>
		</div>
		<div class="col s2">
			<%= label :passengers, "Number of Passengers" %>
			<%= select_tag :passengers, options_for_select(@passenger_options), class: "browser-default" %>
		</div>
	</div>
	<%= button_tag(name: "", class: "waves-effect waves-light btn-large") do %>
		Search
		<i class="material-icons right">flight_takeoff</i>
	<% end %>
<% end %>